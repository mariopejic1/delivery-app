<%- include("../partials/header") %>

<section class="auth-card card">
  <h2>Prijava</h2>

  <% if (locals.error) { %>
    <div class="alert-error">
      <%= error %>
    </div>
  <% } %>

  <form action="/auth/login" method="POST" class="form">
    <input type="email" name="email" placeholder="Email" required class="input">
    <input type="password" name="password" placeholder="Lozinka" required class="input">
    <button type="submit" class="btn btn-primary">Prijavi se</button>
  </form>
  <p class="auth-footer">Nemate raƒçun? <a href="/auth/register">Registrirajte se</a></p>
</section>

<style>
  .auth-card {
    max-width: 400px;
    margin: 40px auto;
    padding: 30px;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    border: 1px solid #dbeafe;
  }
  .auth-card h2 {
    text-align: center;
    margin-top: 0;
    color: #1e293b;
  }
  .form {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }
  .alert-error {
    background-color: #fee2e2;
    color: #991b1b;
    padding: 12px;
    border-radius: 8px;
    border: 1px solid #fecaca;
    margin-bottom: 20px;
    text-align: center;
    font-size: 0.9em;
  }
  .auth-footer {
    text-align: center;
    margin-top: 20px;
    font-size: 0.9em;
    color: #718096;
  }

  .input {
    width: 100%;
    padding: 12px;
    border: 1px solid #cbd5e1;
    border-radius: 8px;
    background: #f8fafc;
    box-sizing: border-box;
  }
  .input:focus {
    outline: none;
    border-color: #3b82f6;
    background: #fff;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }
</style>

<%- include("../partials/footer") %>