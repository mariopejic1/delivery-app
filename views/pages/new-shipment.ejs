<%- include("../partials/header") %>

<h2>Nova pošiljka</h2>

<form method="POST" action="/shipments/create">

  <h3>Primatelj</h3>
  <input name="receiverName" placeholder="Ime" required>
  <input name="receiverPhone" placeholder="Telefon" required>
  <input name="receiverAddress" placeholder="Adresa" required>
  <textarea name="description" placeholder="Opis paketa"></textarea>

  <h3>Dimenzije (cm)</h3>
  <input name="width" placeholder="Širina" required>
  <input name="height" placeholder="Visina" required>
  <input name="length" placeholder="Dužina" required>
  <input name="weight" placeholder="Težina (kg)" required>

  <h3>Način plaćanja</h3>
  <select name="paymentMethod">
    <option value="GOTOVINA">Gotovina unaprijed</option>
    <option value="PRILIKOM_POUZECA">Plaćanje prilikom preuzimanja</option>
    <option value="KARTICA">Kartično plaćanje</option>
  </select>

  <button type="submit">Pošalji paket</button>
</form>

<%- include("../partials/footer") %>
